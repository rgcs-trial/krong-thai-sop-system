{
  "name": "Restaurant Krong Thai - SOP Management System",
  "short_name": "Krong Thai SOP",
  "description": "Standard Operating Procedures Management System for Restaurant Krong Thai",
  "theme_color": "#E31B23",
  "background_color": "#FCFCFC",
  "display": "standalone",
  "orientation": "any",
  "scope": "/",
  "start_url": "/",
  "categories": ["business", "productivity", "utilities", "food"],
  "lang": "en",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "capture_links": "existing-client-navigate",
  "handle_links": "preferred",
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "SOP Dashboard on tablet"
    },
    {
      "src": "/screenshots/mobile-1.png", 
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "SOP Categories"
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/apple-touch-icon-ipad.png",
      "sizes": "167x167",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Food Safety SOPs",
      "short_name": "Food Safety",
      "description": "Access critical food safety procedures",
      "url": "/sop/food-safety",
      "icons": [
        {
          "src": "/icons/shortcut-food-safety.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Emergency Procedures",
      "short_name": "Emergency",
      "description": "Quick access to emergency protocols",
      "url": "/sop/emergency",
      "icons": [
        {
          "src": "/icons/shortcut-emergency.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Progress",
      "short_name": "Progress",
      "description": "View training progress and bookmarks",
      "url": "/dashboard/progress",
      "icons": [
        {
          "src": "/icons/shortcut-progress.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+sop",
      "url": "/sop?id=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/sop/import",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  "share_target": {
    "action": "/sop/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["application/pdf", "text/plain", "image/*"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "version": "1.0.0",
  "related_applications": [],
  "note_taking": {
    "new_note_url": "/sop/notes/new"
  }
}